<script>
    // Получаем ссылку на элемент <section>
    const section = document.querySelector("#images")

    // Отправляем AJAX-запрос на сервер
    fetch('/CutPicture')
        .then(response => response.json())
        .then(data => {
            // Перебираем список изображений и добавляем их на страницу
            data.forEach(imageUrl => {
                const img = document.createElement('img');
                img.src = imageUrl;
                section.appendChild(img);
            });
        })
        .catch(error => console.error(error));
</script>

<script>
    function reset() {
        var section = document.getElementById("images");
        section.innerHTML = "";
    }
    
</script>

@{
    ViewBag.Title = "AddPicture";
}

<h2>AddPicture</h2>
@using (Ajax.BeginForm("CutPicture", "Editor", new AjaxOptions { UpdateTargetId = "images"}))
{
    <table>
        <tr>
            <td>URL изображения:</td>
            <td><input type="text" name="uri" /></td>
        </tr>
        <tr>
            <td>Частей по ширине:</td>
            <td><input type="number" name="width" /></td>
        </tr>
        <tr>
            <td>частей по длине:</td>
            <td><input type="number" name="height" /></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Cut"/></td>
        </tr>
    </table>
}

<div id="images"></div>


@Scripts.Render("~/bundles/jquery")
<script src='@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")'></script>